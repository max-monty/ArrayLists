{
    "name": "Java Basic",
    "image": "eclipse-temurin:17-jdk",
	"features": {
        "ghcr.io/devcontainers/features/git:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "vscjava.vscode-java-pack"
            ],
            "settings": {
                "java.project.sourcePaths": ["src"],
                "java.project.outputPath": "bin",
				"java.server.launchMode": "Standard"
            }
        }
    }
}